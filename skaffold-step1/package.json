{
  "scripts": {
    "up": "concurrently -n api,gui,pg npm:up-api npm:up-gui npm:up-pg",
    "down": "concurrently npm:down-api npm:down-gui npm:down-pg",
    "up-pg": "cd ../bookstore-pg; skaffold dev --port-forward=services",
    "up-api": "cd ../bookstore-api; skaffold debug --port-forward=user,services",
    "up-gui": "cd ../bookstore-gui; skaffold dev --port-forward=services",
    "down-pg": "cd ../bookstore-pg; skaffold delete",
    "down-api": "cd ../bookstore-api; skaffold delete",
    "down-gui": "cd ../bookstore-gui; skaffold delete"
  },
  "dependencies": {
    "concurrently": "^6.1.0"
  }
}
